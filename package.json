{
  "name": "daisyui-devtools",
  "description": "a react component that allows you to adjust your daisyui theme directly in your react project",
  "version": "0.0.2",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./style.css": {
      "import": "./dist/index.css"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tigawanna/daisyui-devtools.git"
  },
  "keywords": [
    "react",
    "daisyui",
    "tailwind",
    "theme"
  ],
  "author": "tigawanna",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tigawanna/daisyui-devtools/issues"
  },
  "homepage": "https://github.com/tigawanna/daisyui-devtools",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "ci": "npm run build",
    "test": "vitest --ui --coverage",
    "tui": "vitest --ui --coverage",
    "coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@types/chroma-js": "^2.4.4",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitest/coverage-v8": "^2.1.5",
    "@vitest/ui": "2.1.5",
    "autoprefixer": "^10.4.20",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.15",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "peerDependencies": {
    "daisyui": "^4.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@bramus/style-observer": "^1.3.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@thednp/react-color-picker": "^0.0.12",
    "chroma-js": "^3.1.2",
    "lucide-react": "^0.460.0",
    "react-colorful": "^5.6.1",
    "tailwind-merge": "^2.5.4",
    "zustand": "^5.0.1"
  }
}
